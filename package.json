{
    "name": "reactive-dom",
    "private": true,
    "description": "Reactive DOM",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/reactive-dom/reactive-dom.git"
    },
    "keywords": [
        "Rxify",
        "Reactive",
        "RxJS",
        "DOM",
        "HTML"
    ],
    "author": "Simon Farrugia",
    "license": "MIT",
    "homepage": "https://github.com/reactive-dom/reactive-dom",
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@commitlint/config-lerna-scopes": "^8.0.0",
        "@tscc/rollup-plugin-tscc": "^0.4.7",
        "@types/chai": "^4.2.9",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.0.12",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "chai": "^4.2.0",
        "commitizen": "^3.1.1",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-tsdoc": "^0.2.7",
        "git-cz": "^3.2.1",
        "husky": "^3.0.0",
        "lerna": "^3.15.0",
        "lint-staged": "^9.2.0",
        "mocha": "^7.0.1",
        "nyc": "^15.0.0",
        "prettier": "^1.18.2",
        "rollup": "^1.27.13",
        "rollup-plugin-terser": "^5.1.3",
        "rollup-plugin-typescript2": "^0.25.3",
        "rxjs": "^6.5.2",
        "ts-node": "^8.6.2",
        "typedoc": "^0.15.5",
        "typedoc-plugin-external-module-map": "^1.0.0",
        "typedoc-plugin-markdown": "^2.0.11",
        "typescript": "^3.9.6"
    },
    "scripts": {
        "lint": "npm run build-all && eslint **/*.{ts,json} --quiet --fix",
        "build-all": "lerna run build",
        "test": "echo \"Error: no test specified\" && exit 1",
        "commit": "tsc --noEmit && git-cz",
        "docs": "rm -rf docs && typedoc",
        "docs-md": "rm -rf docs-md && typedoc --theme markdown --hideSources --out ./docs-md"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,json}": [
            "eslint --ext .ts,.json"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-lerna-scopes",
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
